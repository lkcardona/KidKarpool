@model IEnumerable<KidKarpool.Models.Accept>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentAcceptingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarMakeModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentAcceptingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarMakeModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcceptID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AcceptID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AcceptID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
