@model KidKarpool.Models.Request
@{
    ViewData["Title"] = "AcceptRequest";
}

<h1>Accept Request</h1>

<div>
    <h4>*I agree to pick up the student at the requested time. I understand that I am responsible for coordination with the parent listed below to agree upon drop off location*</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfPickUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfPickUp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentifyLot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentifyLot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
        
    <form asp-action="AcceptRequest" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RequestID" />
        <input type="hidden" asp-for="ParentName" />
        <input type="hidden" asp-for="StudentName" />
        <input type="hidden" asp-for="StudentClass" />
        <input type="hidden" asp-for="TimeOfPickUp" />
        <input type="hidden" asp-for="IdentifyLot" />
        <input type="hidden" asp-for="RideEndTime" />
        <input type="hidden" asp-for="RideStartTime" />
        <input type="hidden" asp-for="PhoneNumber" />

        <dl class="row">
            <div class="column">

                <div class="form-group">
                    <label asp-for="ParentAcceptingName" class="control-label">Parent Accepting Name</label>
                    <input asp-for="ParentAcceptingName" class="form-control" />
                    <span asp-validation-for="ParentAcceptingName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DriverPhoneNumber" class="control-label">Driver Phone Number</label>
                    <input asp-for="DriverPhoneNumber" class="form-control" />
                    <span asp-validation-for="DriverPhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarMakeModel" class="control-label">Car Make Model</label>
                    <input asp-for="CarMakeModel" class="form-control" />
                    <span asp-validation-for="CarMakeModel" class="text-danger"></span>
                </div>

                @*
                original labels and boxes
                 <label for="name">Name</label>
                <input type="text" id="fname" name="Name" placeholder="Your name..">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" id="phoneNumber" name="phonenumber" placeholder="Your phone number..">
                <label for="carMakeModel">Car Make/Model</label>
                <input type="text" id="carMakeModel" name="CarMakeModel" placeholder=" ">*@


            </div>
        </dl>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" />
        </div>

        @*<button type="submit" onclick="alert('You accepted a carpool ride request!')">Accept Request</button>*@

    </form>



        
</div>